<div class="row">
    <div class="container col-md-8 col-md-offset-3">
	<%= simple_form_for @user, html: { class: 'form-horizontal' } do |f| %>
	    <%= f.input :username %>
	    <%= f.input :email %>
	    <%= f.input :first_name %>
	    <%= f.input :last_name %>
	    <%= f.input :password %>
	    <%= f.input :password_confirmation %>

	    <%= f.label :account %>
	    <%= f.text_field :account, class: 'form-control' %>

	    <br >
	    <%= f.button :submit, "Sign up", class: "btn btn-lg btn-info" %>
	<% end %>
    </div>
</div>
