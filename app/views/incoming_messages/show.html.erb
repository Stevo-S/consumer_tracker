<%- model_class = IncomingMessage -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:sender) %></dt>
      <dd><pre class="prettyprint"><%= @incoming_message.sender %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:message) %></dt>
      <dd><pre class="prettyprint"><%= @incoming_message.message %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              incoming_messages_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_incoming_message_path(@incoming_message), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              incoming_message_path(@incoming_message),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>