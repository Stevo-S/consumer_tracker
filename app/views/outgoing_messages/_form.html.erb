<%= form_for @outgoing_message, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :recipient, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :recipient, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :message, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :message, :class => 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  outgoing_messages_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
